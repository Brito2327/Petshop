<script>
    //Máscara CEP
    function fMasc(objeto,mascara) {
				obj=objeto
				masc=mascara
				setTimeout("fMascEx()",1)
			}
			function fMascEx() {
				obj.value=masc(obj.value)
			}
    function mCEP(cep) {
        cep = cep.replace(/\D/g, "")
        cep = cep.replace(/^(\d{5})(\d)/, "$1-$2")

        return cep
    }
    function valida (){

    //Validar CEP
    //Obter elementos HTML
    var alerta = document.getElementsByTagName("div")[0];
    var campo = document.getElementsByTagName("input")[0];

    //Validação
if(campo.value == ""){
    alerta.style.display = "block";
    alerta.innerText= "O campo e-mail precisa ser preenchido";
    campo.focus();
    return false;
}
if(campo.value.indexOf("@") == -1 || campo.value.indexOf((".")) == -1){
    alerta.style.display = "block";
    alerta.innerText= "Favor informar um e-mail válido.";
    campo.focus();
    return false;
}
}


function removerAlerta(){
document.getElementsByTagName("div")[0].style.display="none";
}


</script>


